.modal
  .modal-header
    %h3{:style=>"text-align:center;"}Resend unlock instructions
  = form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post }) do |f|
    = devise_error_messages!
    = f.label :email do
      = f.email_field :email
    .modal-footer
      %button.btn.btn-large.btn-primary{:type=>"Submit"} Resend unlock instructions
