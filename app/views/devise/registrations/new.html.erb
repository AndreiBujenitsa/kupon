<h2>Регистрация</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <div><%= f.label :first_name, "Имя" %><br />
  <%= f.text_field :first_name %></div>
  
  <div><%= f.label :last_name, "Фамилия" %><br />
  <%= f.text_field :last_name %></div>
  
  <div><%= f.label :email, "Ел. почта" %><br />
  <%= f.email_field :email %></div>

  <div><%= f.label :password, "Пароль" %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation, "Подтверждение пароля" %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit "Регистрация" %></div>
<% end %>

<%= render :partial => "devise/shared/links" %>
