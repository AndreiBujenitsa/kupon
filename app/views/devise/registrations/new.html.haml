.modal
  .modal-header
    %h3{:style=>"text-align:center;"}=t(:welcome)
  = form_for resource, :as => resource_name, :url => registration_path(resource_name), :html=>{:class=>"form-signin"} do |f|
    = devise_error_messages!

    = f.text_field :first_name, :class=>"input-block-level", :placeholder=>User.human_attribute_name(:first_name)
    = f.text_field :last_name, :class=>"input-block-level", :placeholder=>User.human_attribute_name(:last_name)
    = f.email_field :email, :class=>"input-block-level", :placeholder=>User.human_attribute_name(:email)
    = f.password_field :password, :class=>"input-block-level", :placeholder=>User.human_attribute_name(:password)
    = f.password_field :password_confirmation, :class=>"input-block-level", :placeholder=>User.human_attribute_name(:password_confirmation)
    %table.table
      %tbody
        %tr
          %td
            %button.btn.btn-large.btn-success{:type=>"Submit"}=t(:sign_up)
          %td{:style=>"vertical-align: middle;font-size:18px;"}=t(:or)
          = render :partial => "devise/shared/links"
  .modal-footer
    = render :partial => "devise/shared/socials"
    
