.modal
  .modal-header
    =link_to :back do
      %i.icon-backward
        %b=t(:back)
    %h3=t(:password_reset)
  = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class=>"form-signin" }) do |f|
    = devise_error_messages!
    %table.table
      %tbody
        %tr
          %td
            = f.email_field :email, :class=>"input-medium", :placeholder=>"Email address", :style=>"margin:6px 0;"
            %button.btn.btn-large.btn-success{:type=>"Submit"}=t(:send_instructions) 
  .modal-footer
    = render :partial => "devise/shared/socials"
