- if controller_name != 'sessions'
  %td= link_to t(:sign_in), new_session_path(resource_name), :class=>"btn btn-large btn-primary"
  
- if devise_mapping.registerable? && controller_name != 'registrations'
  %td= link_to t(:sign_up), new_registration_path(resource_name), :class=>"btn btn-large btn-primary"
  
- if devise_mapping.recoverable? && controller_name != 'passwords' 
  %tr
    %td{:colspan=>3}= link_to t(:forgot_password), new_password_path(resource_name)
  
- if devise_mapping.confirmable? && controller_name != 'confirmations' 
  %td= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), :class=>"btn btn-primary btn-mini"
  
- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' 
  %td= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), :class=>"btn btn-primary btn-mini"
  
