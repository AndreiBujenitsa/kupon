.modal
  .modal-header
    %h3{:style=>"text-align:center;"}=t(:welcome)
  = form_for resource, :as => resource_name, :url => session_path(resource_name), :html=>{:class=>"form-signin"} do |f|
    = f.email_field :email, :class=>"input-block-level", :placeholder=>"Email address"
    = f.password_field :password, :class=>"input-block-level", :placeholder=>"password"
    - if devise_mapping.rememberable?
      =label_tag "user[remember_me]" do
        = f.check_box :remember_me
        remember me
    %table.table
      %tbody
        %tr
          %td
            %button.btn.btn-large.btn-success{:type=>"Submit"}=t(:sign_in)
          %td{:style=>"vertical-align: middle;font-size:18px;"}=t(:or)
          = render :partial => "devise/shared/links"
  .modal-footer
    = render :partial => "devise/shared/socials"
